<h2>Update Movie</h2>
<form action="/movies/{{this.movieToEdit._id}}/edit" method="post">
<label for="title">Title: </label>
<input type="text" name="title" value="{{this.movieToEdit.title}}">
<br>
<label for="genre">Genre: </label>
<input type="text" name="genre" value="{{this.movieToEdit.genre}}">
<br>
<label for="plot">Plot: </label>
<input type="text" name="plot" value="{{this.movieToEdit.plot}}">
<br>
<label for="cast">Cast: </label>
<select name="cast" multiple>
<option value="{{this.movieToEdit.cast._id}}" selected></option>
{{#each this.allCelebs}}
<option value="{{this._id}}">{{this.name}}</option>
{{/each}}
</select>
<br>
<button>Update</button>
</form>